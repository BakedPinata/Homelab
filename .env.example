# .env.example
# Copy this to .env and fill in your values

# General Settings
DOMAIN=example.com
HOSTNAME=homelab
TIME_ZONE=Australia/Perth
DATA_PATH=/opt/homelab/data
BACKUP_PATH=/mnt/backup

# Traefik Settings
ACME_EMAIL=admin@example.com
CLOUDFLARE_EMAIL=admin@example.com
CLOUDFLARE_API_TOKEN=your-cloudflare-api-token
TRAEFIK_USER=admin
# Generate with: echo $(htpasswd -nB user) | sed -e s/\\$/\\$\\$/g
TRAEFIK_PASSWORD_HASH=$$2y$$10$$...

# Home Assistant Database
HOMEASSISTANT_MARIADB_ROOT_PASSWORD=secure_root_password
HOMEASSISTANT_MARIADB_DATABASE=homeassistant
HOMEASSISTANT_MARIADB_USER=homeassistant
HOMEASSISTANT_MARIADB_PASSWORD=secure_password

# InfluxDB Settings
HOMEASSISTANT_INFLUXDB_USER=admin
HOMEASSISTANT_INFLUXDB_PASSWORD=secure_password
HOMEASSISTANT_INFLUXDB_ORG=home
HOMEASSISTANT_INFLUXDB_BUCKET=homeassistant
HOMEASSISTANT_INFLUXDB_TOKEN=your-influxdb-token

# Grafana Settings
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=secure_password
GRAFANA_ADMIN_EMAIL=admin@example.com

# BookStack Settings
BOOKSTACK_APP_URL=https://wiki.example.com
BOOKSTACK_MARIADB_ROOT_PASSWORD=secure_root_password
BOOKSTACK_MARIADB_DATABASE=bookstack
BOOKSTACK_MARIADB_USER=bookstack
BOOKSTACK_MARIADB_PASSWORD=secure_password
BOOKSTACK_ALLOWED_IFRAME_HOSTS=https://wiki.example.com
BOOKSTACK_MAIL_HOST=smtp.gmail.com
BOOKSTACK_MAIL_PORT=587
BOOKSTACK_MAIL_USERNAME=your-email@gmail.com
BOOKSTACK_MAIL_PASSWORD=app-specific-password

# Code Server Settings
# Generate with: echo -n "password" | sha256sum
CODESRV_PASSWORD_HASH=your-password-hash
CODESRV_SUDO_PWD_HASH=your-sudo-password-hash

# ESPHome Settings
ESPHOME_USERNAME=admin
ESPHOME_PASSWORD=secure_password

# Zigbee Settings
ZIGBEE_DEVICE=/dev/serial/by-id/usb-ITead_Sonoff_Zigbee_3.0_USB_Dongle_Plus-if00-port0

# UniFi Settings
UNIFI_MONGODB_UNIFI_USERNAME=unifi
UNIFI_MONGODB_UNIFI_PASSWORD=secure_password

# Tailscale Settings
TAILSCALE_AUTHKEY=tskey-auth-...
TAILSCALE_ADVERTISE_ROUTES=192.168.1.0/24,172.18.0.0/16,172.19.0.0/16

# qBittorrent Settings
QBITTORRENT_VPN_USERNAME=vpn_username
QBITTORRENT_VPN_PASSWORD=vpn_password
QBITTORRENT_LAN_NETWORK=192.168.1.0/24
QBITTORRENT_DOWNLOAD_PATH=/mnt/media/downloads

# OpenSpeedTest Ports (if not using Traefik)
OPENSPEEDTEST_HTTP_PORT=3000
OPENSPEEDTEST_HTTPS_PORT=3001